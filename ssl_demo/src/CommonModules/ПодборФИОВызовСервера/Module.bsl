#Область СлужебныеПроцедурыИФункции

// См. ПодборФИО.Подобрать.
//
Функция Подобрать(
		Знач РежимПоиска,
		Знач ДанныеФИО,
		Знач Пол,
		Знач РазмерВыборки) Экспорт
	
	Возврат ПодборФИО.Подобрать(
		РежимПоиска,
		ДанныеФИО,
		Пол,
		РазмерВыборки);
	
КонецФункции

// См. ПодборФИО.ОпределитьПол.
//
Функция ОпределитьПол(Знач ДанныеФИО) Экспорт
	
	Возврат ПодборФИО.ОпределитьПол(ДанныеФИО);
	
КонецФункции

// См. ПодборФИО.НайтиФИО.
//
Функция НайтиФИО(
		Знач ЧастиФИО,
		Знач ПолноеСовпадение = Истина) Экспорт
	
	Возврат ПодборФИО.НайтиФИО(
		ЧастиФИО,
		ПолноеСовпадение);
	
КонецФункции

#КонецОбласти
